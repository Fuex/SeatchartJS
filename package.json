{
  "name": "seatchartjs",
  "description": "A framework to create beautiful designed seat maps, legends and shopping carts.",
  "main": "src/js/seatchart.js",
  "directories": {
    "example": "examples"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "npx tslint --project . && npx stylelint src/style/seatchart.css",
    "build": "npx gulp",
    "watch": "npx gulp watch",
    "docs:api": "jsdoc2md --global-index-format none --helper docs/tools/helpers.js --partial docs/tools/header.hbs --partial docs/tools/member-index.hbs --partial docs/tools/body.hbs --files dist/seatchart.js > docs/api.md",
    "docs:prepare": "gitbook install",
    "docs:examples": "mkdir _book\\seatchart && cp -r dist/. _book/seatchart && cp docs/demo.html _book",
    "docs:build": "npm run docs:prepare && npm run docs:api && gitbook build && npm run docs:examples && cp docs/CNAME _book",
    "docs:serve": "npm run docs:prepare && npm run docs:api && gitbook serve",
    "docs:clean": "rimraf _book",
    "docs:deploy": "npm run docs:clean && npm run docs:build && gh-pages --dist _book"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OmarMahili/SeatchartJS.git"
  },
  "author": "Omar Mahili",
  "license": "CC BY-SA 4.0",
  "bugs": {
    "url": "https://github.com/OmarMahili/SeatchartJS/issues"
  },
  "homepage": "http://omarmahili.github.io/SeatchartJS/",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.15.0",
    "@typescript-eslint/eslint-plugin-tslint": "^2.15.0",
    "@typescript-eslint/parser": "^2.15.0",
    "docdash": "^1.1.0",
    "eslint": "^6.8.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-prefer-arrow": "^1.1.7",
    "gh-pages": "^2.1.1",
    "gitbook-cli": "^2.3.2",
    "gitbook-plugin-toolbar": "^0.6.0",
    "gulp": "^4.0.2",
    "gulp-rename": "^2.0.0",
    "gulp-uglify": "^3.0.2",
    "jsdoc-to-markdown": "^5.0.3",
    "rollup": "^1.29.0",
    "rollup-plugin-typescript2": "^0.25.3",
    "stylelint": "^9.10.1",
    "stylelint-config-standard": "^18.2.0",
    "tslint": "^5.20.1",
    "tslint-microsoft-contrib": "^6.2.0",
    "typescript": "^3.7.4"
  }
}
